@page "/"
@inject HttpClient Http;

<PageTitle>Home</PageTitle>

<MudButton Variant="Variant.Filled">Default</MudButton>

<h1>Hello, world!</h1>

Welcome to your new app.

@if (_usernames == null)
{
    <p>Загрузка пользователей...</p>
}
else
{
    <ul>
        @foreach (var name in _usernames)
        {
            <li>@name</li>
        }
    </ul>
}

@code {
    public List<string>? _usernames;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var users = await Http.GetFromJsonAsync<List<UserDto>>("api/users");

            if (users != null)
            {
                _usernames = users.Select(u => u.UserName).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка Ошибка: {ex.Message} ");
        }
    }

    public class UserDto
    {
        public Guid Id { get; set; }
        public string UserName { get; set; } = string.Empty;
    }
}
